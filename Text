
using UnityEngine.XR.Interaction.Toolkit;
using Cognitive3D;
public class RecordGrabEvent : MonoBehaviour
{
    private XRGrabInteractable grabInteractable;
    private DynamicObject dynamicObject;
    void Start() 
    {
        grabInteractable =GetComponent<XRGrabInteractable>();
        dynamicObject = GetComponent<DynamicObject>();
        grabInteractable.selectEntered.AddListener(RecordGrab);
        grabInteractable.selectExited.AddListener(RecordRelease);

    }
    public void RecordGrab(BaseInteractionEventArgs args)
    {
        dynamicObject.BeginEngagement("Grabbing");// Write Anaything
    }
    public void RecordRelease(BaseInteractionEventArgs args)
    {
        dynamicObject.EndEngagement("Grabbing");// Write Anaything
    }

}
using Cognitive3D;
public class RecordCustomEvent : MonoBehaviour
{
    public string eventName;
    public void WriteEvent()
    {
        CustomEvent customEvent= new CustomEvent(eventName);
        customEvent.Send();
    }
}
